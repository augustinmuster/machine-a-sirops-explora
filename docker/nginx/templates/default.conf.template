server {
    location / {
        root /usr/share/nginx/html;
        ssi on;
        set $mqtt_url "${MQTT_URL}";
        set $mqtt_topic_prefix "${MQTT_TOPIC_PREFIX}";
        # kill cache
        add_header Last-Modified $date_gmt;
        add_header Cache-Control 'no-store, no-cache';
        if_modified_since off;
        expires off;
        etag off;
    }
}
